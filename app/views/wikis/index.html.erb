<h1>Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% if @wikis.any? %>
      <% @wikis.each do |wiki| %>
        <div>
          <% if !wiki.private? || (wiki.private? && current_user.present?) %>
            <h4><%= link_to wiki.title, wiki %></h4>
            <small>submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.email %></small>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <h4>There are no wikis yet!</h4>
      <br>
      <p>You should totally create one.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= button_to "Create Wiki", new_wiki_path, class:"btn btn-success", method: :get %>
  </div>
</div>
